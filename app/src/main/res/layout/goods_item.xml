<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_goods_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        >
    <TextView
        android:id="@+id/shop_text"
        android:text="商家："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="30dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        />

        <TextView
            android:id="@+id/id_goods_shop"
            android:layout_alignRight="@id/shop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textColor="@drawable/button_blue_background"
            android:textSize="16sp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="35dp"
        >
        <TextView
            android:id="@+id/trade_name"
            android:text="商品："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/id_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textColor="@drawable/button_blue_background"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        >
        <TextView
            android:id="@+id/text_hostel"
            android:text="地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/id_hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textColor="@drawable/button_blue_background"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="105dp"
        >
        <TextView
            android:id="@+id/price_text"
            android:text="价格："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/id_price"
            android:layout_alignRight="@id/shop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationX="30dp"
            android:layout_margin="5dp"
            android:textColor="@drawable/button_blue_background"
            android:textSize="16sp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>