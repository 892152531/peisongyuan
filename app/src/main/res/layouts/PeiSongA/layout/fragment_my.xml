<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.peisongyuan.PeiSongA.Order">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/id_my_data"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/shape"
    android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:translationY="52dp"
        >

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:translationX="-70dp"
        android:translationY="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="编号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/id_my_namber"
            android:text="12138"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:translationX="-55dp"
        android:translationY="-30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:text="姓名:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/id_My_name"
        android:text="许志民"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        />
    </LinearLayout>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >
        <TextView
            android:id="@+id/id_my_feedback"
            style="@style/common_text"
            android:alpha="0.2"
            android:text="反馈"/>

        <TextView
            android:id="@+id/id_my_SetUp"
            style="@style/common_text"
            android:alpha="0.2"
            android:text="设置"/>

        <TextView
            android:id="@+id/id_historical_order"
            style="@style/common_text"
            android:alpha="0.2"
            android:text="历史订单"/>


    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    </LinearLayout>

</FrameLayout>
